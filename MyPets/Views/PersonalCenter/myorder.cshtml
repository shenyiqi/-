<script type="text/javascript">
    	$(document).ready(function(){

        	demo.initChartist();

        	$.notify({
            	icon: 'pe-7s-gift',
            	message: "Welcome to <b>My Pet</b> - a beautiful paradise for pets."

            },{
                type: 'info',
                timer: 4000
            });

    	});
</script>

</html>
